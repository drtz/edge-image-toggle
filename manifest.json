{
    "name": "Image Toggle",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "description": "A Chromium Extension to toggle loading of images.",
    "permissions": [
        "contentSettings",
        "tabs",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "name": "Click to change the icon's color"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}
